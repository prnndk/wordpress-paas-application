# Local Development Environment
# Copy this to .env and update with your values

# Remote Docker Host (TCP connection)
# Format: tcp://IP:PORT (default Docker port is 2375 for unencrypted, 2376 for TLS)
DOCKER_HOST=tcp://YOUR_DOCKER_HOST_IP:2375

# Domain for WordPress instances (used for subdomain-based routing)
DOMAIN=localhost

# Server IP for path-based WordPress URLs (http://SERVER_IP/slug)
# This is the IP address users will use to access WordPress instances
SERVER_IP=YOUR_SERVER_IP

# MySQL Configuration (for auth and tenant data)
# Option 1: Use a remote MySQL server
MYSQL_HOST=YOUR_MYSQL_HOST_IP
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=wp_paas

# Prisma Database URL (used by Prisma ORM)
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:your_password@YOUR_MYSQL_HOST_IP:3306/wp_paas"

# Option 2: Use local MySQL via Docker (run this first):
# docker run -d --name mysql-dev -e MYSQL_ROOT_PASSWORD=devpassword -e MYSQL_DATABASE=wp_paas -p 3306:3306 mysql:8.0
# Then use:
# MYSQL_HOST=localhost
# MYSQL_PASSWORD=devpassword
# DATABASE_URL="mysql://root:devpassword@localhost:3306/wp_paas"

# JWT Secret
JWT_SECRET=dev-secret-change-in-production

# GlusterFS (for production)
GLUSTER_MOUNT_PATH=/mnt/glusterfs/tenants

# CORS (allow dashboard and portal to connect)
CORS_ORIGIN=http://localhost:3000,http://localhost:3030

# WordPress Docker Image
# Default: wordpress:6.4-php8.2-apache (standard image from Docker Hub)
# Custom: Build custom image on Swarm cluster for auto-install feature:
#   docker-compose -f packages/orchestrator/docker-compose.build.yml build
# Then set:
# WORDPRESS_IMAGE=wp-paas-custom:latest
