{
	"name": "@wp-paas/orchestrator",
	"version": "1.0.0",
	"description": "WordPress PaaS Orchestrator - Docker Swarm Management API",
	"main": "dist/main.js",
	"scripts": {
		"build": "prisma generate && nest build",
		"docker:build-wp": "docker-compose -f docker-compose.build.yml build",
		"dev": "prisma generate && node --no-deprecation node_modules/@nestjs/cli/bin/nest.js start --watch",
		"start": "node dist/main",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"typecheck": "tsc --noEmit",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:migrate:prod": "prisma migrate deploy",
		"prisma:studio": "prisma studio",
		"prisma:push": "prisma db push",
		"simulate-webhook": "ts-node scripts/simulate-webhook.ts"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.0",
		"@nestjs/config": "^3.3.0",
		"@nestjs/core": "^11.0.0",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/passport": "^11.0.0",
		"@nestjs/platform-express": "^11.0.0",
		"@nestjs/swagger": "^11.2.3",
		"@prisma/client": "^5.7.1",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"cookie-parser": "^1.4.7",
		"dockerode": "^4.0.2",
		"minio": "^8.0.6",
		"mysql2": "^3.7.0",
		"nanoid": "^3.3.7",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"reflect-metadata": "^0.2.1",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.14",
		"@nestjs/schematics": "^10.1.0",
		"@nestjs/testing": "^11.0.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.10",
		"@types/dockerode": "^3.3.23",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.10.6",
		"@types/passport-jwt": "^4.0.0",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"eslint": "^8.56.0",
		"jest": "^29.7.0",
		"prisma": "^5.7.1",
		"source-map-support": "^0.5.21",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
