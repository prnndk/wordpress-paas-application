// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TenantStatus {
  creating
  provisioning
  running
  starting
  stopping
  restarting
  stopped
  error
  deleted
}

enum PlanTier {
  free
  hobby
  starter
  starter_plus
  pro
  pro_plus
  business
  business_plus
  agency
  enterprise
}

enum SubscriptionStatus {
  active
  expired
  cancelled
}

enum CheckoutStatus {
  pending
  success
  failed
  cancelled
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  tenants       Tenant[]
  subscriptions Subscription[]
  checkouts     Checkout[]
  invoices      Invoice[]
  paymentMethods PaymentMethod[]

  @@index([email])
  @@map("users")
}

model Tenant {
  id              String       @id @default(cuid())
  userId          String       @map("user_id")
  name            String
  slug            String       @unique  // URL path segment, e.g. "my-site"
  region          String       @default("us-east-1")

  // Resource specs
  cpuCores        Float        @default(1) @map("cpu_cores")
  ramGb           Float        @default(2) @map("ram_gb")
  storageGb       Int          @default(10) @map("storage_gb")



  // Environment variables (JSON array)
  envVars         String?      @db.Text @map("env_vars")

  // Notes
  notes           String?      @db.Text

  // Endpoints (path-based URLs)
  endpoints       String?      @db.Text  // JSON: { site: "https://...", admin: "https://..." }

  // Database credentials
  dbName          String       @map("db_name")
  dbUser          String       @map("db_user")
  dbPassword      String       @map("db_password")

  // WordPress admin
  wpAdminUser     String       @default("admin") @map("wp_admin_user")
  wpAdminPassword String?      @map("wp_admin_password")
  wpAdminEmail    String?      @map("wp_admin_email")

  // Plan and status
  planId          PlanTier     @default(free) @map("plan_id")
  replicas        Int          @default(1)
  status          TenantStatus @default(creating)

  // Timestamps
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([slug])
  @@index([status])
  @@index([planId])
  @@map("tenants")
}

model Subscription {
  id        String             @id @default(cuid())
  userId    String             @map("user_id")
  planId    PlanTier           @default(free) @map("plan_id")
  status    SubscriptionStatus @default(active)
  startDate DateTime           @default(now()) @map("start_date")
  endDate   DateTime?          @map("end_date")
  createdAt DateTime           @default(now()) @map("created_at")
  updatedAt DateTime           @updatedAt @map("updated_at")

  // Resource limits (derived from plan, stored for quick access)
  maxInstances  Int   @default(1) @map("max_instances")
  maxCpuCores   Float @default(1) @map("max_cpu_cores")
  maxRamGb      Float @default(0.5) @map("max_ram_gb")
  maxStorageGb  Int   @default(5) @map("max_storage_gb")
  maxBandwidthGb Int  @default(10) @map("max_bandwidth_gb")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([endDate])
  @@map("subscriptions")
}

model Checkout {
  id        String         @id @default(cuid())
  userId    String         @map("user_id")
  planId    String         @map("plan_id")
  status    CheckoutStatus @default(pending)
  amount    Float
  currency  String         @default("USD")
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("checkouts")
}

enum InvoiceStatus {
  draft
  paid
  overdue
  cancelled
}

model Invoice {
  id          String        @id @default(cuid())
  userId      String        @map("user_id")
  amount      Float
  currency    String        @default("USD")
  status      InvoiceStatus @default(paid)
  description String?
  planId      String?       @map("plan_id")
  planName    String?       @map("plan_name")
  
  // Invoice metadata
  invoiceNumber String   @unique @map("invoice_number")
  issuedAt      DateTime @default(now()) @map("issued_at")
  dueDate       DateTime? @map("due_date")
  paidAt        DateTime? @map("paid_at")
  
  // PDF generation metadata (mock)
  downloadUrl String? @map("download_url")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([issuedAt])
  @@map("invoices")
}

model PaymentMethod {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  
  // Mock payment data (never store real card numbers!)
  brand     String   // e.g., "visa", "mastercard"
  last4     String   // Last 4 digits
  expMonth  Int      @map("exp_month")
  expYear   Int      @map("exp_year")
  
  // Metadata
  isDefault Boolean  @default(false) @map("is_default")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("payment_methods")
}
